<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="borderPane" prefHeight="450.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hour.controller.PersonController">
   <right>
      <ListView fx:id="list" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </right>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label id="name1" fx:id="name1" text="姓名" translateX="50.0" translateY="50.0" />
            <Label id="name2" fx:id="name2" text="姓名" translateX="100.0" translateY="35.0" />
            <TextField id="name3" fx:id="name3" maxWidth="200.0" translateX="100.0" translateY="15.0" />
            <Label id="sex1" fx:id="sex1" layoutX="10.0" layoutY="25.0" text="性别" translateX="50.0" translateY="50.0" />
            <Label id="sex2" fx:id="sex2" layoutX="10.0" layoutY="41.0" text="性别" translateX="100.0" translateY="35.0" />
            <TextField id="sex3" fx:id="sex3" maxWidth="200.0" translateX="100.0" translateY="15.0" />
            <Label id="age1" fx:id="age1" layoutX="10.0" layoutY="56.0" text="年龄" translateX="50.0" translateY="50.0" />
            <Label id="age2" fx:id="age2" layoutX="10.0" layoutY="71.0" text="年龄" translateX="100.0" translateY="35.0" />
            <TextField id="age3" fx:id="age3" maxWidth="200.0" translateX="100.0" translateY="15.0" />
            <Label id="phone1" fx:id="phone1" layoutX="10.0" layoutY="87.0" text="电话" translateX="50.0" translateY="50.0" />
            <Label id="phone2" fx:id="phone2" layoutX="10.0" layoutY="102.0" text="电话" translateX="100.0" translateY="35.0" />
            <TextField id="phone3" fx:id="phone3" maxWidth="200.0" translateX="100.0" translateY="15.0" />
            <Label id="email1" fx:id="email1" layoutX="10.0" layoutY="117.0" text="邮件" translateX="50.0" translateY="50.0" />
            <Label id="email2" fx:id="email2" layoutX="10.0" layoutY="133.0" text="邮件" translateX="100.0" translateY="35.0" />
            <TextField id="email3" fx:id="email3" maxWidth="200.0" translateX="100.0" translateY="15.0" />
            <Label id="other1" fx:id="other1" text="备注" translateX="50.0" translateY="50.0" />
            <Label id="other2" fx:id="other2" text="备注" translateX="100.0" translateY="35.0" />
            <TextField id="other3" fx:id="other3" maxWidth="200.0" translateX="100.0" translateY="15.0" />
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox prefHeight="80.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="addPerson" onAction="#addPerson" mnemonicParsing="false" text="添加" translateX="50.0" translateY="30.0" />
            <Button fx:id="changePerson" onAction="#changePerson" mnemonicParsing="false" text="修改" translateX="70.0" translateY="30.0" />
            <Button fx:id="deletePerson" onAction="#deletePerson" layoutX="65.0" layoutY="10.0" mnemonicParsing="false" text="删除" translateX="90.0" translateY="30.0" />
            <Button fx:id="savePerson" onAction="#savePerson" layoutX="121.0" layoutY="10.0" mnemonicParsing="false" text="保存" translateX="110.0" translateY="30.0" />
         </children></HBox>
   </bottom>
</BorderPane>
